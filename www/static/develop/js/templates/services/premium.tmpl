<% if (info.count && info.count > 0) { %>
	<p>Осталось бесплатных: <%=info.count%></p>
<% } %>

<h3 class="hidden-lg hidden-sm hidden-md">Услуги <%=model().getTitle()%></h3>
<table class="table table-bordered">
	<thead>
		<th class="service-title hidden-xs">Услуга</th>
		<th class="quantity">Количество</th>
		<th class="price w150">Цена</th>
	</thead>
	<tbody>
	<tr>
		<td class="service-title hidden-xs">
			Услуга 'Премиум' <%=model().getTitle()%>
		</td>
		<td class="quantity">
			<input class="js-quantity" type="number" value="<%=model().getQuantity('premium')%>" min="1" max="99">
		</td>
		<td class="price w150">
			<span class="js-price">
				<%=model().getAmount('premium')%>
			</span>
		</td>
	</tr>
	<% if (!is_edit) { %>
	<tr>
	    <td  class="service-title hidden-xs">
	    	E-mail маркетинг  <%=model().getTitle()%>
	  	</td>
	    <td  class="quantity">
	    	<input class="js-em-quantity" type="number" value="<%=model().getQuantity('email')%>" min="0" max="99">&nbsp;дней
	    </td>
	    <td  class="price w150">
	    	<span class="js-em-price">
	    		<%=model().getAmount('email')%>
	    	</span>
	    </td>
	</tr>
	<% } %>
	</tbody>
</table>

<% if (info.code > 200 && info.code < 400) { %>
	<%=info.text%>
<% } %>

<% if (info.code >= 400) { %>
	<p>Вы не можете воспользоваться этой услугой, потому что объявление заполнено не полностью.</p>
	<p><%=info.text%></p>
<% } %>
