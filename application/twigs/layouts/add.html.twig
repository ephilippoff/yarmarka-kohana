{% extends "layouts/main_with_header" %}

{% set theme_class = 'blue-subtle-theme' %}

{% block title %}
	{% if isEdit %}
		Редактирование объявления
	{% else %}
		Создание объявления в {{cityTitle}}
	{% endif %}
{% endblock title %}

{% block css %}
	{{css("add.css")}}
	{{ parent() }}
	{{ css("bootstrap.tables.min.css") }}
{% endblock css%}

{% block body %}
	
	{% block header %} 
		{{ parent() }}
	{% endblock header %}

	{% block crumbs %}
		<div class="breadcrumbs-cont module">
		{% for crumb in crumbs %}
			{% if crumb.url %}
				<a href="{{ url(crumb.url) }}">{{crumb.title}}</a> /
			{% else  %}
				<h1>{{crumb.title}}</h1>
			{% endif %}
		{% endfor %}
		</div>
	{% endblock crumbs %}

	<div class="row min-content-height">
		<div class="col-md-12">
			{% block content %} 
				<div class="{{theme_class}}">
					<div class="menu-cont2 clearfix brt2">&nbsp;</div>
				</div>
			{% endblock content %}
		</div><!--col-->
	</div><!--row-->

	{% block footer %}
		{{ parent() }}
	{% endblock footer %}
	
	{% block templates %}
		{{ parent() }}
	{% endblock templates %}
	
{% endblock body %}

{% block page_name%}user{% endblock page_name %}
