<div class="popup-menu-cont2l iLight-cont {% if staticMainMenu %} left_menu hidden-xs {% else %} js-newsmenu popup-menu-cont{% endif %} z300">
	<div class="left brb2">
		<ul class="top" role="menu">
			{% for element in categories %}
				<li class="js-submenu-item" data-submenu-id="section{{element.id}}" class="section{{element.id}}">
					<span class="span-link" onclick="window.location='{{ '/' ~ element.category_url ~ '/' ~ element.seo_name }}'">{{element.title}}</span>
				</li>
			{% endfor %}
		</ul>
	</div>
	<div class="right brb2 visible-lg">
		{% for element in categories %}
			{% set menuHeight = (banners[element.id] is defined and banners[element.id].menu_height) ? banners[element.id].menu_height : 0 %}
			{% set divWidth = (banners[element.id] is defined and banners[element.id].menu_width) ? banners[element.id].menu_width : 600 %}
			{% set ulWidth = 191 %}
			{% if banners[element.id] is defined and file_exist('/uploads/banners/menu/' ~ banners[element.id].image) and banners[element.id].menu_name == 'news' %}
			<div class="section section{{element.id}} p10" id="section{{element.id}}" style="min-height:{{menuHeight}}px;width: {{divWidth}}px; display: none;" data-menu-height="{{menuHeight}}">
					<img hidefocus="true" style="position: absolute;right:{{banners[element.id].x}}px ; bottom:{{banners[element.id].y}}px;" usemap="#map{{element.id}}" src="/uploads/banners/menu/{{banners[element.id].image}}"/>
					<map name="map{{element.id}}" id="map{{element.id}}">
						<area shape="poly" coords="{{banners[element.id].map_params}}" class="" href="/redirect/ref_cb?id={{banners[element.id].id}}" target="_blank" />
					</map>
			</div>
			{% endif %}
		{% endfor %}
	</div>
</div>