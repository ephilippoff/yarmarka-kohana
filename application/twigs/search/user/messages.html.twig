{% if messages|length > 0 %}
	<div class="info-block-cont theme3 module js-hide-region">
		<div class="block-title">
			<span>Сообщения к вашим объявлениям</span>
		</div>
		<div class="comments-list-cont p10">
			{% for message in messages %}
				<div class="comment-cont">
					<div class="li-cont moderator1">
						<div class="aside">
							<span class="created-on">{{message.createdOn|date('d.m.Y')}}</span>
						</div>
						<div class="cont">		
							<span class="user-name">
								{{message.user_name}}
							</span>
							<p class="text-comment">
								— {{message.text}} <a href="/detail/{{message.object_id}}">к объявлению</a>
							</p>
						</div>
					</div>
				</div>				
			{% endfor %}
		</div>
	</div>
{% endif %}
