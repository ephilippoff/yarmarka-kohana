{% extends "layouts/user" %}

{% set theme_class = 'blue-subtle-theme' %}

{% block css %} 
	{{ parent() }}
	{{ css("comments.css") }}
	{{ css("filters.css") }}
{% endblock css%}

{% block js %}{% endblock js%}

{% block header %} 
		{{ requestblock('block_twig/topline', {'favourites':favourites}) }}
		{% include 'block/header/logoline' %}
		{% include 'search/user/crumbs' %}
{% endblock header %} 


{% block title %} {{ seo_attributes.title }} {% endblock title%}
{% block meta_description %}{% endblock meta_description%}

{% block leftside %} 
	{% include 'user/personal/nav' %}
{% endblock leftside %}

{% block crumbs %} {% endblock crumbs %}
